<div class="categoriesWrapper">
    <div class="container-fluid">
        {{!--Breadcrumb--}}
        <p class="breadcrumbs">
            <a href="#/home">
                Home
            </a>
            <span>&raquo;</span>
            <a href="#/book-categories">
                Book Categories
            </a>
        </p>
        {{!--Title--}}
        <div class="titleWrapper">
            <h1>
                Fantasy Book Categories
            </h1>
            <h3>
                Choose your favorite fantasy book category
            </h3>
        </div>
        {{!--Category--}}
        <div class="row">
            <div class="col-md-8">
                {{#each bookCategories as |val valId|}}
                <div class="category">
                    <h4>
                        <a href="#/book-categories/{{valId}}">{{val.title}}</a>
                    </h4>
                    <div class="categorySubtitle">
                        <p>Book titles in this category: {{bookQuantity}}</p>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <img src="{{val.imageUrl}}" alt="{{val.title}}" class="img-thumbnail">
                        </div>
                        <div class="col-md-7" id="categoryDescriptionWrapper">
                            <p class="categoryDescription">{{val.description}}</p>
                        </div>
                    </div>
                    <div>
                        <a href="#/book-categories/{{valId}}" class="btn btn-default">Browse the Books</a>
                    </div>
                </div>
                {{/each}}
            </div>
            <div class="col-sm-4">
                <aside>
                    <h3>
                        Book Categories
                    </h3>
